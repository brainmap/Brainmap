<% form_for(@page) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :parent_id %><br />
		<%= f.collection_select :parent_id, Page.all(:order => "title"), :id, :title, :include_blank => "create root page" %>
  </p>
  
   <%= render :partial => 'application/textile_example'%>
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p> 
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => 60 %>
  </p>
	<p>
		<%= f.label :permalink %><br />
		<%= f.text_field :permalink %>
	</p>
  <p>
    <%= f.submit action %>
  </p>
<% end %>