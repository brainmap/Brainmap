<% form_for @event, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <%= render :partial => 'application/textile_example'%>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 60 %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
	<p>
	  <%= f.label :image %><br />
	  <%= f.file_field :image %>
	</p>
  <p>
    <%= f.submit action %>
  </p>
<% end %>