<% @page_title = title("Edit Study Description - " + @study_description.title) %>

<h1>Editing study description</h1>

<% form_for(@study_description) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @study_description %> |
<%= link_to 'Back', study_descriptions_path %>