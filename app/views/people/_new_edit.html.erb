<% form_for @person, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

	<div style="float:left; margin-right:2em;">
		<h3>Biographical Information</h3>
	  <p>
	    <%= f.label :first_name %><br />
	    <%= f.text_field :first_name %>
	  </p>
	  <p>
	    <%= f.label :last_name %><br />
	    <%= f.text_field :last_name %>
	  </p>
	  <p>
	    <%= f.label :middle_initial %><br />
	    <%= f.text_field :middle_initial %>
	  </p>
		<p>
			<%= f.label :degree %><br />
			<%= f.text_field :degree %>
		</p>
	  <p>
	    <%= f.label :job_title %><br />
	    <%= f.text_field :job_title %>
	  </p>
	</div>

	<div style="float:left; margin-right:2em;">
		<h3>Contact Information</h3>
	  <p>
	    <%= f.label :office_phone %><br />
	    <%= f.text_field :office_phone %>
	  </p>
	  <p>
	    <%= f.label :office_phone_ext %><br />
	    <%= f.text_field :office_phone_ext %>
	  </p>
	  <p>
	    <%= f.label :lab_phone %><br />
	    <%= f.text_field :lab_phone %>
	  </p>
	  <p>
	    <%= f.label :lab_phone_ext %><br />
	    <%= f.text_field :lab_phone_ext %>
	  </p>
	  <p>
	    <%= f.label :fax %><br />
	    <%= f.text_field :fax %>
	  </p>
	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	</div>

	<div style="float:left; margin-right:2em;">
		<h3>Address</h3>
		<% f.fields_for :address do |af| %>
			<p>
		    <%= af.label :line1 %><br />
		    <%= af.text_field :line1 %>
		  </p>
		  <p>
		    <%= af.label :line2 %><br />
		    <%= af.text_field :line2 %>
		  </p>
		  <p>
		    <%= af.label :street %><br />
		    <%= af.text_field :street %>
		  </p>
		  <p>
		    <%= af.label :city %><br />
		    <%= af.text_field :city %>
		  </p>
		  <p>
		    <%= af.label :state %><br />
		    <%= af.text_field :state %>
		  </p>
		  <p>
		    <%= af.label :zip %><br />
		    <%= af.text_field :zip %>
		  </p>
		<% end %>
	</div>
	
	<br style="clear:both" />


	<% 
	textile_examples = ['h1. This is a heading.']
	textile_examples << 'Surround text with underscores for _italics_'
	textile_examples << 'Surround text with asterisks to *make it bold*'
	textile_examples << 'Double question marks indicate a ??Citation??'
	textile_examples << 'Use at-symbols to distinguish @code_phrases@'
	textile_examples << '# Make lists
# with pound symbols'
	textile_examples << '# Make lists  
## with child entries 
# by using  
## more pound symbols'
	textile_examples << '* Bulleted lists
* just use an asterisk(*) instead of a pound.
** The same goes for child entries.'
textile_examples << 'Create a link to a page by "putting a descriptive phrase in quotes, followed by a colon and the URL":http://www.brainmap.wisc.edu.'
textile_examples << '!imagey!'
	
	 %>

	<table border="0" cellspacing="0" cellpadding="5">
		<tfoot><td colspan="3"><%= link_to "More info at Textile Cheat Sheet", "http://hobix.com/textile/quick.html" %></td></tfoot>
		<% for example in textile_examples %>
			<tr>
				<td><pre><%= example %></pre></td>
				<td>â†’</td>
				<td><%= RedCloth.new(example).to_html %></td>
			</tr>
		<% end %>
	</table>

	<h3>Brief Statement of Interests (plain text only)</h3>

  <p>
    <%= f.label :brief_bio %><br />
    <%= f.text_area :brief_bio %>
  </p>

	<h3>Longer Statement of Interests (optional, use textile markup if you wish)</h3>

  <p>
    <%= f.label :long_bio %><br />
    <%= f.text_area :long_bio %>
  </p>

	<p>
	  <%= f.label 'Photo' %><br />
	  <%= f.file_field :photo %>
	</p>

  <p>
    <%= f.submit action %>
  </p>

<% end %>