<h1>Editing blurb</h1>

<% form_for(@blurb) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @blurb %> |
<%= link_to 'Back', blurbs_path %>