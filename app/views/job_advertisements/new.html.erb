<% content_for :head do %>
	<%= stylesheet_link_tag 'job_advertisements' %>
<% end %>
<% @page_title = title("Create new opportunity") %>

<h1>New Opportunity</h1>

<% form_for(@job_advertisement) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :pvl %><br />
    <%= f.text_field :pvl %>
  </p>
  <p>
    <%= f.label :responder_id %><br />
		<%= f.collection_select :responder_id, Person.all, :id, :full_name, :include_blank => true  %>
  </p>
  <p>
    <%= f.label :type %><br />
		<%= select :job_advertisement, :opp_type, {"volunteers" => "volunteers", "researchers" => "researchers", "students" => "students"} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', job_advertisements_path %>