<h1>Listing authorships</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Publication</th>
  </tr>

<% @authorships.each do |authorship| %>
  <tr>
    <td><%=h authorship.person_id %></td>
    <td><%=h authorship.publication_id %></td>
    <td><%= link_to 'Show', authorship %></td>
    <td><%= link_to 'Edit', edit_authorship_path(authorship) %></td>
    <td><%= link_to 'Destroy', authorship, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New authorship', new_authorship_path %>